{
  "extends": "../../tslint.json",
  "rules": {
    "directive-selector": [
      true,
      "attribute",
      "ngxMat",
      "camelCase"
    ],
    "component-selector": [
      true,
      "element",
      "ngx-mat",
      "kebab-case"
    ],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore",
      "allow-snake-case"
    ],
    "no-inferrable-types": false,
    "no-input-rename": false
  }
}
